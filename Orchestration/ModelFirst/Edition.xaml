<Window x:Class="ModelFirst.Edition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edition Utilisateur" Height="160" Width="240" DataContext="{Binding Main, Mode=OneWay, Source={StaticResource Locator}}">
    <StackPanel Margin="5">
    	<TextBlock TextWrapping="Wrap" Text="Nom"/>
    	<TextBox TextWrapping="Wrap" Text="{Binding Nom}" Margin="10,0,0,0"/>
    	<TextBlock TextWrapping="Wrap" Text="Prénom"/>
    	<TextBox TextWrapping="Wrap" Text="{Binding Prenom}" Margin="10,0,0,0"/>
    	<TextBlock TextWrapping="Wrap" Text="Adresse"/>
    	<TextBox TextWrapping="Wrap" Text="{Binding Adresse}" Margin="10,0,0,0"/>
    </StackPanel>
</Window>
